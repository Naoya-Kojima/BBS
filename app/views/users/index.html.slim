.mb-3
  h1
    | Users
  = link_to 'Create New User', new_user_path, class: 'btn btn-primary'
.table-responsive
  table.table.table-striped.table-bordered.table-hover
    thead
      tr
        th
          | name
        th
          | email
        th
          | sex
    tbody
      - @users.each do |user|
        tr
          td
            = user.name
          td
            = user.email
          - if user.male?
            td
              span.badge.badge-pill.badge-primary
                = user.sex
          - else
            td
              span.badge.badge-pill.badge-danger
                = user.sex
          td
            = link_to 'Show', user, class: 'btn btn-primary'
          - if user.is_created_by_user?(current_user)
            td
              = link_to 'Edit', edit_user_path(user), class: 'btn btn-secondary'
            td
              = link_to 'Destroy', user, method: :delete, class: 'btn btn-danger'
          - else
            td
            td
