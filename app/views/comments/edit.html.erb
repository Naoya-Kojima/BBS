<h3>Edit Comment</h3>

<%= form_for [@post, @comment] do |f| %>
  <div class="form-group">
    <%= f.label :content %><br>
    <%= f.text_field :content, class: "form-control", required:true %>
  </div>
  <div class="form-group">
    <button type="submit" class="btn btn-primary">Submit</button>
  </div>
<% end %>

<%= link_to 'Back', @post, class: 'btn btn-primary btn-sm' %>
